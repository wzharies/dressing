<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.youth.banner.Banner
    android:id="@+id/banner"
    android:layout_width="match_parent"
    android:layout_height="200dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="40dp">
            <ImageView
                android:id="@+id/letter_museum"
                android:src="@mipmap/letter_museum"
                android:padding="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="信件博物馆"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp">
            <ImageView
                android:id="@+id/good_letter"
                android:src="@mipmap/letter_good"
                android:padding="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:text="精选信件"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/content_and_more"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment1_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/show_letter_item"/>

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
