<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/stamp_background_margin"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

<ImageView
    android:id="@+id/stamp_iamge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="0dp"/>

    <ImageView
        android:id="@+id/stamp_selected"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/stamp_iamge"
        android:layout_alignTop="@+id/stamp_iamge"
        android:src="@drawable/stamp_selected"
        android:visibility="invisible"/>
<TextView
    android:background="#EFF"
    android:id="@+id/stamp_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/stamp_iamge"
    android:gravity="right"
    android:textSize="20sp" />



</RelativeLayout>